@model IEnumerable<CIS_264_Price_APP.Models.Holidays.July4th>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>

<head>
    <title> Holidays </title>
    <meta charset="utf-8">
    <link href="~/Styles/StyleSheet1.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="TBD(L)">

</head>

<body>
   
    <div id="wrapper">
        <h1>Holidays</h1>
        <h1>July 4th</h1>
        <div id="content">
            <p>
                <button class="holiday" id="holiday" type="button" onclick="location.href='@Url.Action("Create", "July4th" )'">Create</button>
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Category)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model.OrderBy(x => x.Category))
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>

                            <button class="holiday" id="holiday" type="button" onclick="location.href='@Url.Action("Edit", "July4th", new { id = item.July4th_ID } )'">Edit</button> |
                            <button class="holiday" id="holiday" type="button" onclick="location.href='@Url.Action("Details", "July4th", new { id = item.July4th_ID } )'">Details</button> |
                            <button class="holiday" id="holiday" type="button" onclick="location.href='@Url.Action("Delete", "July4th", new { id = item.July4th_ID } )'">Delete</button>
                        </td>
                    </tr>
                }

            </table>

        </div>
    </div>
    <div>
        <button class="holiday" id="holiday" type="button" onclick="location.href='@Url.Action("Index", "Holidays" )'">Back to list</button>
    </div>
</body>
</html>
